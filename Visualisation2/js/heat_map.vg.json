{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/YunusNuzili/FIT3179/main/Visualisation2/Dataset/Accidents_VIC3.csv"
    },
    "width": 330,
    "height": 420,
    "title": "Accidents in each week and hour",
    "config": {
        "view": {
            "strokeWidth": 0,
            "step": 13
        },
        "axis": {
            "domain": false
        }
    },
    "mark": "rect",
    "encoding": {
        "x": {
            "field": "DAY_OF_WEEK",
            "type": "nominal",
            "title": "Day of Week",
            "sort": "ascending",
            "axis": {
                "labelAngle": 0
            },
            "scale": {"domain": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]}

        },
        "y": {
            "field": "Hour",
            "type": "nominal",
            "title": "Hour"
        },
        "color": {
            "field": "OBJECTID",
            "aggregate": "count",
            "type": "quantitative",
            "legend": {
                "title": "Accident Numbers"
            }
        },
        "tooltip":[{
            "field": "DAY_OF_WEEK",
            "type": "nominal",
            "title": "Day of Week"
        },{
            "field": "Hour",
            "type": "nominal",
            "title": "Hour"
        },{
            "field": "OBJECTID",
            "aggregate": "count",
            "type": "quantitative",
            "title": "No. of Accidents"
        }]
    }
  }
